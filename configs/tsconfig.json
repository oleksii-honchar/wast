{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "..",
    "declaration": false,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmit": true,
    "noImplicitAny": true,
    "noStrictGenericChecks": true,
    "paths": {
      "src/*": [ "src/*" ],
      "package.json": ["../package.json"]
    },
    "pretty": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types",
      "../src/typings"
    ]
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../configs",
    "../dist",
    "../docs",
    "../coverage",
    "../devops"
  ]
}
